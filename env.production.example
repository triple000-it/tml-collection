# =====================================================
# TML COLLECT - PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and update with your actual values
# NEVER commit .env.local to version control
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.ngquunzrscytljlzufpu.supabase.co:5432/postgres

# =====================================================
# AUTHENTICATION
# =====================================================
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=https://your-domain.com

# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=TML Collect
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=production

# =====================================================
# SECURITY SETTINGS
# =====================================================
# Password hashing salt rounds
BCRYPT_SALT_ROUNDS=12

# Session settings
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# File upload settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# =====================================================
# EMAIL CONFIGURATION
# =====================================================
# SMTP settings for email verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@tml-collect.com

# =====================================================
# PAYMENT PROCESSING
# =====================================================
# Stripe configuration for premium features
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =====================================================
# ANALYTICS
# =====================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =====================================================
# MONITORING
# =====================================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =====================================================
# PRODUCTION SETTINGS
# =====================================================
# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=https://cdn.tml-collect.com

# Redis URL for caching
REDIS_URL=redis://your-redis-url:6379

# =====================================================
# SECURITY NOTES
# =====================================================
# 1. Generate strong, unique secrets for production
# 2. Use different secrets for each environment
# 3. Never share these values publicly
# 4. Rotate secrets regularly
